{% extends 'layout.njk' %}

{% block content %}

{# Sobrescrendo o método utilizando methodOverride #}
<form class="card" method="POST" action="/instructors?_method=PUT">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/1447141/500x200) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Editar Instrutor</h3>

        {% include 'instructors/fields.njk' %}

        {# Campo necessário para editar o instrutor baseado pelo ID #}
        <input type="hidden" name="id" value="{{ instructor.id }}">

    </section>
</form>

{% endblock content %}